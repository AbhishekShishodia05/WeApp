@model WeApp.Models.Category

@{
    ViewData["Title"] = "Create";
}

<h4>Category</h4>
<hr />
<div class="row border border-success p-3">
    <div class="col-4" style="width:100%">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DisplayOrder" class="control-label"></label>
                <input asp-for="DisplayOrder" class="form-control" />
                <span asp-validation-for="DisplayOrder" class="text-danger"></span>
            </div>
            <div class="row mt-1">
                <div class="form-group col-6">
                    <input type="submit" value="Create" class="btn btn-primary" style="width:100%;margin-top:1%" />
                </div>
                <div class="col-6">
                    <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:100%;margin-top:1%">Back</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
} 
